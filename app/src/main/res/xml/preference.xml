<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="root">

    <SwitchPreferenceCompat
        app:key="darkMode"
        app:icon="@drawable/ic_playlist_add_check_black_24dp"
        app:title="다크모드"
        app:defaultValue="false"/>
    <ListPreference
        app:key="selectCharacter"
        app:icon="@drawable/ic_playlist_add_check_black_24dp"
        app:dialogTitle="캐릭터 선택"
        app:entries="@array/Ch_entries"
        app:entryValues="@array/Ch_values"
        app:defaultValue="0"
        app:title="캐릭터 설정" />
    <ListPreference
        app:key="whiteNoise"
        app:icon="@drawable/ic_playlist_add_check_black_24dp"
        app:dialogTitle="백색소음"
        app:entries="@array/WN_entries"
        app:entryValues="@array/WN_values"
        app:title="백색소음"/>

    <Preference
        app:key="Reset"
        app:dialogMessage="초기화 하시겠습니까?"
        app:icon="@drawable/ic_playlist_add_check_black_24dp"
        app:title="설정 초기화"/>

</androidx.preference.PreferenceScreen>

