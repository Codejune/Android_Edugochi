<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/measure_subject"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:backgroundTint="@color/active_green"
        app:icon="@drawable/ic_play_arrow"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Button.Circle"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/subject_string"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="과목"
        android:textColor="@color/itemColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/measure_subject"
        app:layout_constraintEnd_toStartOf="@+id/subject_timeout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/measure_subject"
        app:layout_constraintRight_toLeftOf="@id/subject_timeout"
        app:layout_constraintStart_toEndOf="@+id/measure_subject"
        app:layout_constraintTop_toTopOf="@id/measure_subject" />

    <TextView
        android:id="@+id/subject_timeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00 : 00"
        android:textColor="@color/itemColor"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/measure_subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/measure_subject" />

</androidx.constraintlayout.widget.ConstraintLayout>